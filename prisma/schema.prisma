generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Group {
  id          Int      @id() @default(autoincrement())
  name        String   @unique
  description String
  updated_at  DateTime @updatedAt
  created_at  DateTime @default(now())

  @@map("groups")
}

model User {
  id            Int      @id() @default(autoincrement())
  first_name    String
  last_name     String
  email_address String   @unique
  hash          String
  updated_at    DateTime @updatedAt
  created_at    DateTime @default(now())

  @@map("users")
}

model UserGroup {
  id         Int      @id() @default(autoincrement())
  user_id    Int
  group_id   Int
  created_at DateTime @default(now())

  @@map("user_groups")
}

model Chat {
  id         Int      @id() @default(autoincrement())
  text       String
  user_id    Int
  group_id   Int
  created_at DateTime @default(now())

  @@map("chats")
}
